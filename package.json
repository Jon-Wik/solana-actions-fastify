{
  "name": "solana-actions-fastify",
  "author": "Jon Wik <jon@jonwik.xyz>",
  "version": "0.0.0",
  "license": "Apache-2.0",
  "keywords": [
    "web3",
    "solana"
  ],
  "description": "Solana actions API Server With Fastify",
  "exports": "./dist/server.js",
  "repository": {
    "type": "git",
    "url": "https://github.com/Jon-Wik/solana-actions-fastify"
  },
  "type": "module",
  "engines": {
    "node": ">=20",
    "pnpm": ">=8"
  },
  "scripts": {
    "dev": "bun run --watch ./src/server.ts",
    "dev:compat": "concurrently \"tsc --watch -p ./tsconfig.json\" \"nodemon ./dist/server.js\"",
    "prebuild": "rimraf ./dist",
    "build": "pnpm run prebuild && tsc -p ./tsconfig.json; tsc-alias -p ./tsconfig.json",
    "build:watch": "tsc --watch -p ./tsconfig.json; tsc-alias -p ./tsconfig.json",
    "start:prod": "pnpm run build && node ./dist/index.js"
  },
  "prettier": "@ardasevinc/prettier-config",
  "devDependencies": {
    "@ardasevinc/prettier-config": "^0.1.4",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.4",
    "tsc-alias": "^1.8.10",
    "typescript": "^5.5.2"
  }
}
